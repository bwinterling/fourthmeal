<header id="body-header" class="grid-container">

  <div id="menu_greeting" class="grid-40">
    <h1>On the Menu At Ono</h1>
  </div>

  <section id="other-products" class="grid-60">
    <%= link_to "Full Menu", menu_path, class:"category #{'active' if @category.nil?}" %>

    <% @categories.each do |category| %>
      <%= link_to_category(category, @category) %>
    <% end %>

  </section>

</header>